@model Decrypto.Models.GameRound

@{
    ViewBag.Title = "Home Page";
}

<h2>Clue</h2>
@using (Html.BeginForm("Guess", "Home"))
{
    <div class="row">
        <div class="col">
            @Model.Clue1.Word
        </div>
        <div class="col-6">
            @Html.DisplayFor(model => model.Clue1.Hint)
        </div>
        <div class="btn-group btn-group-toggle col" data-toggle="buttons">
            <label class="btn btn-secondary">
                <input type="radio" name="guess" id="guess1" autocomplete="off"> 1
            </label>
            <label class="btn btn-secondary">
                <input type="radio" name="guess" id="guess2" autocomplete="off"> 2
            </label>
            <label class="btn btn-secondary">
                <input type="radio" name="guess" id="guess3" autocomplete="off"> 3
            </label>
            <label class="btn btn-secondary">
                <input type="radio" name="guess" id="guess4" autocomplete="off"> 4
            </label>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
    @Html.HiddenFor(model => model.Id)
}
<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
