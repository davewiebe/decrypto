@model Decrypto.Models.GameRound

@{
    ViewBag.Title = "Home Page";
}

<h2>Clue</h2>
@using (Html.BeginForm())
{
    <div class="row">
        <div class="col">
            <div class="btn-group btn-group-toggle" id="cluegroup" data-toggle="buttons">
                <label class="btn btn-secondary">
                    <input type="radio" name="options" id="option1" autocomplete="off"> 1
                </label>
                <label class="btn btn-secondary">
                    <input type="radio" name="options" id="option2" autocomplete="off"> 2
                </label>
                <label class="btn btn-secondary">
                    <input type="radio" name="options" id="option3" autocomplete="off"> 3
                </label>
                <label class="btn btn-secondary">
                    <input type="radio" name="options" id="option4" autocomplete="off"> 4
                </label>
            </div>
        </div>
        <div class="col-6">
            @Html.EditorFor(model => model.Clue1.Hint)
        </div>
        <div class="btn-group btn-group-toggle col" data-toggle="buttons">
            <label class="btn btn-secondary">
                <input type="radio" name="guess" id="guess1" autocomplete="off"> 1
            </label>
            <label class="btn btn-secondary">
                <input type="radio" name="guess" id="guess2" autocomplete="off"> 2
            </label>
            <label class="btn btn-secondary">
                <input type="radio" name="guess" id="guess3" autocomplete="off"> 3
            </label>
            <label class="btn btn-secondary">
                <input type="radio" name="guess" id="guess4" autocomplete="off"> 4
            </label>
        </div>
    </div>
    <button class="" onclick='$("#cluegroup").hide("fast");'>Hide</button>
    <br />
    <button onclick='$("#cluegroup").show("fast");'>Show</button>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
}
<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
